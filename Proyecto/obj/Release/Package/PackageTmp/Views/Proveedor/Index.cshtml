@using WebApplication1.Models

@model List<TblProveedor>

    @{
    ViewBag.Title = "Proveedor";
    }

    <h2>@ViewBag.Title</h2>
    <hr />


    @if (Model != null)
{
    <div class="container mt-3">
        <a href="~/Proveedor/newProveedor" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Nuevo Proveedor</a>
        <br />
        <br />
        <table class="table table-dark table-hover">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Nit</th>
                    <th>Direccion</th>
                    <th>Telefono</th>
                    <th>Gestion</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>

                    <td>@item.Nombre</td>
                    <td>@item.Nit</td>
                    <td>@item.Direccion</td>
                    <td>@item.Telefono</td>
                    <td>
                        <input onclick="document.location.href='@Url.Content("~/Proveedor/modificarProveedor/" + item.IdProveedor)'" type="button" value="Editar" class="btn btn-warning" />
                        <input onclick="eliminarProveedor('@item.IdProveedor', '@item.IdProveedor');" type="button" value="Eliminar" class="btn btn-danger" />

                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="container mt-3">
        <h2>No hay usuarios</h2>
    </div>
}
    <script>
        function eliminarProveedor(id,Proveedor) {
        if (confirm(`Esta Seguro de Eliminar A Este Proveedor: ${Proveedor} ?????` )) {
            url = "@Url.Content("~/Proveedor/eliminarProveedor/")" + id;
            $.get(url).done((data) => {
                if (data == "Exito") {
                    document.location.href = "@Url.Content("~/Proveedor/Index")";
                } else {
                    alert("Hubo un error");
                }
            });
        }
    }
    </script>




    
