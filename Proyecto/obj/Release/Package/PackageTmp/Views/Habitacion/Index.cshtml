@using WebApplication1.Models
@model List<HabitacionesViewModel>
    @{
    ViewBag.Title = "Habitaciones";
    }

    <h2>@ViewBag.Title</h2>
    <hr />


    @if (Model != null)
{
    <div class="container mt-3">
        <a href="~/Habitacion/newHabitaciones" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Nueva Habitacion</a>
        <br />
        <br />
        <table class="table table-dark table-hover">
            <thead>
                <tr>
                    <th>No.Habitacion</th>
                    <th>Clinica</th>
                    <th>Cantidad Maxima de Personas</th>
                    <th>Gestion</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {

                <tr>
                    <td>@item.NoHabitacion</td>
                    <td>@item.Clinica</td>
                    <td>@item.CantidadMaxPacientes</td>

                    <td>
                        <input onclick="document.location.href='@Url.Content("~/Habitacion/modificarHabitacion/" + item.IdHabitacion)'" type="button" value="Editar" class="btn btn-warning" />
                        <input onclick="eliminarHabitacion('@item.IdHabitacion','@item.NoHabitacion');" type="button" value="Eliminar" class="btn btn-danger" />
                    </td>
                </tr>

                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="container mt-3">
        <h2>No hay examen</h2>
    </div>
}

    <script>
        function eliminarHabitacion(id,Habitacion) {
        if (confirm(`Esta Seguro de Eliminar Este Examen: ${Habitacion} ?????` )) {

            url = "@Url.Content("~/Habitacion/eliminarHabitacion/")" + id;
            $.get(url).done((data) => {
                if (data == "Exito") {
                    document.location.href = "@Url.Content("~/Habitacion/Index")";
                } else {
                    alert("Hubo un error");
                }
            });
        }
    }
    </script>



