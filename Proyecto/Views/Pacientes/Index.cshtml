@using WebApplication1.Models
@model List<Pacientes>
@{
    ViewBag.Title = "Pacientes";
}

<h2>@ViewBag.Title</h2>
<hr />


@if (Model != null)
{
    <div class="container mt-3">
        <h2>Pacientes</h2>
        @Html.ActionLink("Nuevo", "newPaciente", "Pacientes", new { @class = "btn btn-primary" })
        <table class="table table-dark table-hover">
            <thead>
                <tr>
                    <th>No. Afiliado</th>
                    <th>Nombre</th>
                    <th>Direccion</th>
                    <th>Telefono</th>
                    <th>Gestion</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.no_afiliado</td>
                        <td>@item.nombre</td>
                        <td>@item.direccion</td>
                        <td>@item.telefono</td>
                        <td>
                            <input onclick="document.location.href='@Url.Content("~/Pacientes/deletePaciente/" + item.idPaciente)'" type="button" value="Eliminar" class="btn btn-danger" />
                            <input onclick="document.location.href='@Url.Content("~/Pacientes/modifyPaciente/" + item.idPaciente)'" type="button" value="Editar" class="btn btn-warning" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="container mt-3">
        <h2>No hay usuarios</h2>
    </div>
}
<script>
    function EliminarUsuario(id) {
        if (confirm("Esta Seguro de Eliminar A Esta Paciente?????")) {
            url = "@Url.Content("~/Pacientes/deletePaciente/")" + "/" + id;
            $.get(url).done((data)=>{
                if (data == 1) {
                    document.location.href = "@Url.Content("~/Pacientes/Index")"
                } else {
                    alert("Ocurrio un Error :c");
                }
            });
        }
    }
</script>







