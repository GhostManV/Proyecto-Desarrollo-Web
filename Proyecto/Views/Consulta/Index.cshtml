@using WebApplication1.Models
@model List<TblConsulta>
    @{
    ViewBag.Title = "Consulta";
    }

    <h2>@ViewBag.Title</h2>
    <hr />


    @if (Model != null)
{
    <div class="container mt-3">
        <h2>Consulta</h2>
        @Html.ActionLink("Nuevo", "newConsulta", "Consulta", new { @class = "btn btn-primary" })
        <table class="table table-dark table-hover">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Paciente</th>
                    <th>Empleado</th>
                    <th>Clinica</th>
                    <th>Diagnostico</th>
                    <th>Receta</th>
                    <th>Gestion</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.IdConsulta</td>
                    <td>@item.IdPaciente</td>
                    <td>@item.IdEmpleado</td>
                    <td>@item.IdClinica</td>
                    <td>@item.IdDiagnostico</td>
                    <td>@item.IdReceta</td>
                    <td>
                        <input onclick="document.location.href='@Url.Content("~/Consulta/deleteConsulta/" + item.IdConsulta)'" type="button" value="Eliminar" class="btn btn-danger" />
                        <input onclick="document.location.href='@Url.Content("~/Consulta/modifyConsulta/" + item.IdConsulta)'" type="button" value="Editar" class="btn btn-warning" />
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="container mt-3">
        <h2>No hay usuarios</h2>
    </div>
}
    <script>
    function EliminarUsuario(id) {
        if (confirm("Esta Seguro de Eliminar A Esta Paciente?????")) {
            url = "@Url.Content("~/Consulta/deleteConsulta/")" + "/" + id;
            $.get(url).done((data)=>{
                if (data == 1) {
                    document.location.href = "@Url.Content("~/Consulta/Index")"
                } else {
                    alert("Ocurrio un Error :c");
                }
            });
        }
    }
    </script>


    




