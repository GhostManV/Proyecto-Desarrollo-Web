@model WebApplication1.Models.ConsultaViewModel
@{
    ViewBag.Title = "Agregar Consulta";
    List<SelectListItem> listadoPaciente = ViewBag.listadoPaciente;
    List<SelectListItem> listadoEmpleado = ViewBag.listadoEmpleado;
    List<SelectListItem> listadoClinica = ViewBag.listadoClinica;
    List<SelectListItem> listadoDiagnostico = ViewBag.listadoDiagnostico;
    List<SelectListItem> listadoReceta = ViewBag.listadoReceta;
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Action", "Controller", FormMethod.Post, new { role = "form", @class = "" }))
{
    <div class="mb-3 mt-3">
        @Html.LabelFor(m => m.nombre)
        @Html.TextBoxFor(m => m.nombre, new { @class = "form-control" })
    </div>

    <div class="mb-3 mt-3">
        @Html.DropDownList("Paciente", listadoPaciente, "Seleccionar un Paciente", new { @class = "form-control" })
    </div>

    <div class="mb-3 mt-3">
        @Html.DropDownList("Empleado", listadoEmpleado, "Seleccionar un Empleado", new { @class = "form-control" })
    </div>


    <div class="mb-3 mt-3">
        @Html.DropDownList("Clinica", listadoClinica, "Seleccionar una Clinica", new { @class = "form-control" })
    </div>

    <div class="mb-3 mt-3">
        @Html.DropDownList("Diagnostico", listadoDiagnostico, "Seleccionar un Diagnostico", new { @class = "form-control" })
    </div>

    <div class="mb-3 mt-3">
        @Html.DropDownList("Receta", listadoReceta, "Seleccionar una Receta", new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Agregar Consulta</button>
}


