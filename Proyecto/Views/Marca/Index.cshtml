@using WebApplication1.Models
@model List<Marcas>
    @{
    ViewBag.Title = "Marcas";
    }

    <h2>@ViewBag.Title</h2>
    <hr />


    @if (Model != null)
{
    <div class="container mt-3">
        <h2>Marcas</h2>
        @Html.ActionLink("Nuevo", "newMarcas", "Marca", new { @class = "btn btn-primary" })
        <table class="table table-dark table-hover">
            <thead>
                <tr>
                    <th>Marca</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.Marca</td>
                    <td>
                        <input onclick="document.location.href='@Url.Content("~/Diagnostico/deleteDiagnostic/" + item.IdMarca)'" type="button" value="Eliminar" class="btn btn-danger" />
                        <input onclick="document.location.href='@Url.Content("~/Diagnostico/modifyDiagnostic/" + item.IdMarca)'" type="button" value="Editar" class="btn btn-warning" />
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="container mt-3">
        <h2>No hay Marcas</h2>
    </div>
}
    <script>
    function EliminarUsuario(id) {
        if (confirm("Esta Seguro de Eliminar A Esta Diagnostico?????")) {
            url = "@Url.Content("~/Diagnostico/deleteDiagnostic/")" + "/" + id;
            $.get(url).done((data)=>{
                if (data == 1) {
                    document.location.href = "@Url.Content("~/Diagnostico/Index")"
                } else {
                    alert("Ocurrio un Error :c");
                }
            });
        }
    }
    </script>
