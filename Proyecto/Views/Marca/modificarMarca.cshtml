@model WebApplication1.Models.Marcas

@{
    ViewBag.Title = "modificarMarca";
}

<h2>modificarMarca</h2>

@using (Html.BeginForm("modificarMarca","Marca",FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
