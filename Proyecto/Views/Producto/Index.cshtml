@using WebApplication1.Models
@model List<ProductosViewModel>
@{
    ViewBag.Title = "Productos";
}

<h2>@ViewBag.Title</h2>
<hr />


@if (Model != null)
{
    <div class="container mt-3">
        <h2>Productos</h2>
        @Html.ActionLink("Nuevo", "newProducto", "Producto", new { @class = "btn btn-primary" })
        <table class="table table-dark table-hover">
            <thead>
                <tr>
                    <th>Lote Producto</th>
                    <th>Clinica</th>
                    <th>Nombre</th>
                    <th>Marca</th>
                    <th>Descripcion</th>
                    <th>Precio</th>
                    <th>Existencia</th>
                    <th>Gestion</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Lote_Producto</td>
                        <td>@item.Clinica</td>
                        <td>@item.nombre</td>
                        <td>@item.Marca</td>
                        <td>@item.descripcion</td>
                        <td>@item.precio</td>
                        <td>@item.existencia</td>
                        <td>
                            <input onclick="document.location.href='@Url.Content("~/Producto/deleteProducto/" + item.idProductos)'" type="button" value="Eliminar" class="btn btn-danger" />
                            <input onclick="document.location.href='@Url.Content("~/Producto/modifyProducto/" + item.idProductos)'" type="button" value="Editar" class="btn btn-warning" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="container mt-3">
        <h2>No hay usuarios</h2>
    </div>
}
<script>
    function EliminarUsuario(id) {
        if (confirm("Esta Seguro de Eliminar A Esta Paciente?????")) {
            url = "@Url.Content("~/Producto/deleteProducto/")" + "/" + id;
            $.get(url).done((data)=>{
                if (data == 1) {
                    document.location.href = "@Url.Content("~/Producto/Index")"
                } else {
                    alert("Ocurrio un Error :c");
                }
            });
        }
    }
</script>







