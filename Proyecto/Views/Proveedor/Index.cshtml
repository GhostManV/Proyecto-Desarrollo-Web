@using WebApplication1.Models
@model List<Proveedores>
    @{
    ViewBag.Title = "Proveedor";
    }

    <h2>@ViewBag.Title</h2>
    <hr />


    @if (Model != null)
{
    <div class="container mt-3">
        <h2>Proveedor</h2>
        @Html.ActionLink("Nuevo", "newProveedor", "Proveedor", new { @class = "btn btn-primary" })
        <table class="table table-dark table-hover">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Nit</th>
                    <th>Direccion</th>
                    <th>Telefono</th>
                    <th>Gestion</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.nombre</td>
                    <td>@item.nit</td>
                    <td>@item.direccion</td>
                    <td>@item.telefono</td>
                    <td>
                        <input onclick="document.location.href='@Url.Content("~/Proveedor/modificarProveedor/" + item.idProveedor)'" type="button" value="Editar" class="btn btn-warning" />
                        <input onclick="eliminarProveedor('@item.idProveedor', '@item.idProveedor');" type="button" value="Eliminar" class="btn btn-danger" />
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="container mt-3">
        <h2>No hay usuarios</h2>
    </div>
}
    <script>
        function eliminarProveedor(id,Proveedor) {
        if (confirm(`Esta Seguro de Eliminar A Este Proveedor: ${Proveedor} ?????` )) {
            url = "@Url.Content("~/Proveedor/eliminarProveedor/")" + id;
            $.get(url).done((data) => {
                if (data == "Exito") {
                    document.location.href = "@Url.Content("~/Proveedor/Index")";
                } else {
                    alert("Hubo un error");
                }
            });
        }
    }
    </script>




