@using WebApplication1.Models
@model List<Proveedores>
@{
    ViewBag.Title = "Proveedor";
}

<h2>@ViewBag.Title</h2>
<hr />


@if (Model != null)
{
    <div class="container mt-3">
        <h2>Proveedor</h2>
        @Html.ActionLink("Nuevo", "newProveedor", "Proveedor", new { @class = "btn btn-primary" })
        <table class="table table-dark table-hover">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Nit</th>
                    <th>Direccion</th>
                    <th>Telefono</th>
                    <th>Gestion</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.nombre</td>
                        <td>@item.nit</td>
                        <td>@item.direccion</td>
                        <td>@item.telefono</td>
                        <td>
                            <input onclick="document.location.href='@Url.Content("~/Proveedor/deleteProveedor/" + item.idProveedor)'" type="button" value="Eliminar" class="btn btn-danger" />
                            <input onclick="document.location.href='@Url.Content("~/Proveedor/modifyPaciente/" + item.idProveedor)'" type="button" value="Editar" class="btn btn-warning" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="container mt-3">
        <h2>No hay usuarios</h2>
    </div>
}
<script>
    function EliminarUsuario(id) {
        if (confirm("Esta Seguro de Eliminar A Esta Paciente?????")) {
            url = "@Url.Content("~/Proveedor/deleteProveedor/")" + "/" + id;
            $.get(url).done((data)=>{
                if (data == 1) {
                    document.location.href = "@Url.Content("~/Proveedor/Index")"
                } else {
                    alert("Ocurrio un Error :c");
                }
            });
        }
    }
</script>




