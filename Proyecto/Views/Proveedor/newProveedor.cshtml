@using WebApplication1.Models
@model Proveedores
@{
    ViewBag.Title = "Agregar Proveedor";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("agregarProveedor", "Proveedor", FormMethod.Post))
{
@Html.HiddenFor(m => m.idProveedor)
<div class="mb-3 mt-3">
    @Html.LabelFor(m => m.nombre)
    @Html.TextBoxFor(m => m.nombre, new { @class = "form-control" })
</div>
<div class="mb-3 mt-3">
    @Html.LabelFor(m => m.nit)
    @Html.TextBoxFor(m => m.nit, new { @class = "form-control" })
</div>
<div class="mb-3 mt-3">
    @Html.LabelFor(m => m.direccion)
    @Html.TextBoxFor(m => m.direccion, new { @class = "form-control" })
</div>
<div class="mb-3 mt-3">
    @Html.LabelFor(m => m.telefono)
    @Html.TextBoxFor(m => m.telefono, new { @class = "form-control" })
</div>

<button type="submit" class="btn btn-primary">Agregar Proveedor</button>
}