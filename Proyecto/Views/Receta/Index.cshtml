@using WebApplication1.Models

@model List<TblReceta>

    @{
    ViewBag.Title = "Receta";
    }

    <h2>@ViewBag.Title</h2>
    <hr />


    @if (Model != null)
{
    <div class="container mt-3">
        <h2>Receta</h2>
        @Html.ActionLink("Nuevo", "newReceta", "Receta", new { @class = "btn btn-primary" })
        <table class="table table-dark table-hover">
            <thead>
                <tr>
                    <th>serie_receta</th>
                    <th>fecha_emision</th>
                    <th>Gestiones</th>

            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>

                    <td>@item.Serie</td>
                    <td>@item.FechaEmision</td>
                    <td>
                        <input onclick="document.location.href='@Url.Content("~/Receta/modificarReceta/" + item.IdReceta)'" type="button" value="Editar" class="btn btn-warning" />
                        <input onclick="eliminarReceta('@item.IdReceta', '@item.IdReceta');" type="button" value="Eliminar" class="btn btn-danger" />

                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="container mt-3">
        <h2>No hay Receta</h2>
    </div>
}
<script>
        const swalWithBootstrapButtons = Swal.mixin({
            customClass: {
                confirmButton: 'btn btn-success',
                cancelButton: 'btn btn-danger'
            },
            buttonsStyling: false
        })


        function eliminarReceta(id, Receta) {
            swalWithBootstrapButtons.fire({
                title: `Desea Eliminar la Receta No.${id}?`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Si',
                cancelButtonText: 'No'
            }).then((result) => {
                if (result.isConfirmed) {
                    var url = "@Url.Content("~/Receta/eliminarReceta/")" + id;
                    $.get(url).done((data) => {
                        if (data == "Exito") {
                            document.location.href = "@Url.Content("~/Receta/Index")";
                        } else {
                            swalWithBootstrapButtons.fire(
                                'Cancelado',
                                'La Receta No Se Elimino :D',
                                'error'
                            )
                        }
                    });
                    swalWithBootstrapButtons.fire(
                        'Eliminada!',
                        'La Receta Se Ha Eliminado Exitosamente.',
                        'success'
                    )
                } else if (result.dismiss === Swal.DismissReason.cancel) {
                    swalWithBootstrapButtons.fire(
                        'Cancelado',
                        'La Receta No Se Elimino :D',
                        'error'
                    )
                }
            })
    }
</script>

