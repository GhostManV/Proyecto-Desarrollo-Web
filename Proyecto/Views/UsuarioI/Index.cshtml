@using WebApplication1.Models
@model List<UsuariosViewModel>
@{
    ViewBag.Title = "Vista Usuarios";
}

<h2>@ViewBag.Title</h2>
<hr />


@if (Model != null)
{
    <div class="container mt-3">
        <h2>Usuarios</h2>
        <button type="button" class="btn btn-info" onclick=document.location.href ='@Url.Content("~/UsuarioI/newUser")'>Nuevo</button>
        <table class="table table-dark table-hover">
            <thead>
                <tr>
                    <th>Id_Usuario</th>
                    <th>Nombre</th>
                    <th>Usuario</th>
                    <th>Contraseña</th>
                    <th>Rol</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.id_usuario</td>
                        <td>@item.nombre</td>
                        <td>@item.username</td>
                        <td>@item.pass</td>
                        <td>@item.nombreRol</td>
                        <td>
                            <input onclick="document.location.href='@Url.Content("~/UsuarioI/deleteUser/" + item.id_usuario)'" type="button" value="Eliminar" class="btn btn-danger" />
                            <input onclick="document.location.href='@Url.Content("~/UsuarioI/modifyUser/" + item.id_usuario)'" type="button" value="Editar" class="btn btn-default" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="container mt-3">
        <h2>No hay usuarios</h2>
    </div>
}
<script>
    function EliminarUsuario(id) {
        if (confirm("Esta Seguro de Eliminar A Este Usuario?????")) {
            url = "@Url.Content("~/UsuarioI/deleteUser/")" + "/" + id;
            $.get(url).done((data)=>{
                if (data == 1) {
                    document.location.href = "@Url.Content("~/UsuarioI/Index")"
                } else {
                    alert("Ocurrio un Error :c");
                }
            });
        }
    }
</script>
