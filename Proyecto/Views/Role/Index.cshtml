@using WebApplication1.Models
@model List<TblRole>
    @{
    ViewBag.Title = "Roles";
    }

    <h2>@ViewBag.Title</h2>
    <hr />


    @if (Model != null)
{
    <div class="container mt-3">
        <h2>Roles</h2>
        @Html.ActionLink("Nuevo", "newRol", "Role", new { @class = "btn btn-primary" })
        <table class="table table-dark table-hover">
            <thead>
                <tr>
                    <th>Rol</th>
                    <th>Gestion</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.Rol</td>
                    <td>
                        <input onclick="document.location.href='@Url.Content("~/Role/modificarRol/" + item.IdRol)'" type="button" value="Editar" class="btn btn-warning" />
                        <input onclick="eliminarRol('@item.IdRol','@item.Rol');" type="button" value="Eliminar" class="btn btn-danger" />
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="container mt-3">
        <h2>No hay Roles</h2>
    </div>
}
    <script>
    function eliminarRol(id) {
        if (confirm("Esta Seguro de Eliminar Este Rol?????")) {
            url = "@Url.Content("~/Role/eliminarRol/")" + "/" + id;
            $.get(url).done((data)=>{
                if (data == 1) {
                    document.location.href = "@Url.Content("~/Role/Index")"
                } else {
                    alert("Ocurrio un Error :c");
                }
            });
        }
    }
    </script>
