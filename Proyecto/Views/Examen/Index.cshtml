
@using WebApplication1.Models
@model List<Examen>
    @{
    ViewBag.Title = "Examen";
    }

    <h2>@ViewBag.Title</h2>
    <hr />


    @if (Model != null)
{
    <div class="container mt-3">
        <h2>Examen</h2>
        @Html.ActionLink("Nuevo", "newExamen", "Examen", new { @class = "btn btn-primary" })
        <table class="table table-dark table-hover">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Descripcion</th>
                    <th>Precio</th>
                    <th>Gestion</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.nombre</td>
                    <td>@item.descripcion</td>
                    <td>@item.precio</td>

                    <td>
                        <input onclick="document.location.href='@Url.Content("~/Examen/deleteExamen/" + item.idExamen)'" type="button" value="Eliminar" class="btn btn-danger" />
                        <input onclick="document.location.href='@Url.Content("~/Examen/modifyExamen/" + item.idExamen)'" type="button" value="Editar" class="btn btn-default" />
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="container mt-3">
        <h2>No hay examen</h2>
    </div>
}
    <script>
    function EliminarExamen(id) {
        if (confirm("Esta Seguro de Eliminar  Este Examen?????")) {
            url = "@Url.Content("~/Examen/deleteExamen/")" + "/" + id;
            $.get(url).done((data)=>{
                if (data == 1) {
                    document.location.href = "@Url.Content("~/Examen/Index")"
                } else {
                    alert("Ocurrio un Error :c");
                }
            });
        }
    }
    </script>
