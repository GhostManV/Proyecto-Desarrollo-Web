@using WebApplication1.Tblusuario
@model List<TblUsuario>
    @{
    ViewBag.Title = "Vista Usuarios";
    }

    <h2>@ViewBag.Title</h2>
    <hr />


    @if (Model != null)
{
    <div class="container mt-3">
        <h2>Usuarios</h2>
        @Html.ActionLink("Nuevo", "newUser", "Usuario",new{@class="btn btn-primary"})
        <table class="table table-dark table-hover">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Usuario</th>
                    <th>Rol</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.Empleado</td>
                    <td>@item.Username</td>
                    <td>@item.Rol</td>
                    <td>
                        <input onclick="document.location.href='@Url.Content("~/Usuario/deleteUser/" + item.id_usuario)'" type="button" value="Eliminar" class="btn btn-danger" />
                        <input onclick="document.location.href='@Url.Content("~/Usuario/modifyUser/" + item.id_usuario)'" type="button" value="Editar" class="btn btn-warning" />
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="container mt-3">
        <h2>No hay usuarios</h2>
    </div>
}
    <script>
    function EliminarUsuario(id) {
        if (confirm("Esta Seguro de Eliminar A Este Usuario?????")) {
            url = "@Url.Content("~/Usuario/deleteUser/")" + "/" + id;
            $.get(url).done((data)=>{
                if (data == 1) {
                    document.location.href = "@Url.Content("~/Usuario/Index")"
                } else {
                    alert("Ocurrio un Error :c");
                }
            });
        }
    }
    </script>


    public int IdUsuario { get; set; }
    public int? IdEmpleado { get; set; }
    public int? IdRol { get; set; }
    public string Username { get; set; }
    public string Password { get; set; }
