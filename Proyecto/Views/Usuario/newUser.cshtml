@model WebApplication1.Models.Usuarios
@{
    ViewBag.Title = "Agregar Usuario";
    List<SelectListItem> listaRoles = ViewBag.listadoRoles;
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Action", "Controller", FormMethod.Post, new { role = "form", @class = "" }))
{
    <div class="mb-3 mt-3">
        @Html.LabelFor(m => m.nombre)
        @Html.TextBoxFor(m => m.nombre, new { @class = "form-control" })
    </div>

    <div class="mb-3 mt-3">
        @Html.LabelFor(m => m.username)
        @Html.TextBoxFor(m => m.username, new { @class = "form-control" })
    </div>
    <div class="mb-3 mt-3">
        @Html.LabelFor(m => m.pass)
        @Html.PasswordFor(m => m.pass, new { @class = "form-control" })
    </div>
    @Html.DropDownList("Rol", listaRoles, "Seleccionar un rol", new { @class = "form-control" })
    <button type="submit" class="btn btn-primary">Agregar Usuario</button>
}

