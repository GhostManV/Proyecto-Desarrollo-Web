@using WebApplication1.Models
@model List<ComprasViewModel>
@{
    ViewBag.Title = "Compras";
}

<h2>@ViewBag.Title</h2>
<hr />


@if (Model != null)
{
    <div class="container mt-3">
        <h2>Compra</h2>
        @Html.ActionLink("Nuevo", "newCompra", "Compra", new { @class = "btn btn-primary" })
        <table class="table table-dark table-hover">
            <thead>
                <tr>
                    <th>No. Orden</th>
                    <th>Fecha Orden</th>
                    <th>Fecha</th>
                    <th>Proveedor</th>
                    <th>Gestion</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.no_orden</td>
                        <td>@item.fecha_orden</td>
                        <td>@item.fecha</td>
                        <td>@item.proveedor</td>
                        <td>
                            <input onclick="document.location.href='@Url.Content("~/Compra/deleteCompra/" + item.idCompra)'" type="button" value="Eliminar" class="btn btn-danger" />
                            <input onclick="document.location.href='@Url.Content("~/Compra/modifyCompra/" + item.idCompra)'" type="button" value="Editar" class="btn btn-warning" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="container mt-3">
        <h2>No hay Diagnosticos</h2>
    </div>
}
<script>
    function EliminarUsuario(id) {
        if (confirm("Esta Seguro de Eliminar A Esta Habitacion?????")) {
            url = "@Url.Content("~/Compra/deleteCompra/")" + "/" + id;
            $.get(url).done((data)=>{
                if (data == 1) {
                    document.location.href = "@Url.Content("~/Compra/Index")"
                } else {
                    alert("Ocurrio un Error :c");
                }
            });
        }
    }
</script>